<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>todo_detail.hds</title>
    {{> link}}
  </head>
  <body>
    {{> navbar}}

    <div class="container">
      <div class="jumbotron">
        <h1>Update todo</h1>
        <form class="" action="/todos/{{_id}}/update" method="post">
          <input type="text" name="text" size="40" value='{{text}}'>
          {{# if completed}}
          <input type="radio" name="state" value="true" checked>completed
          <input type="radio" name="state" value="false">not yet
          {{else}}
          <input type="radio" name="state" value="true">completed
          <input type="radio" name="state" value="false" checked>not yet
          {{/if}}
          <input type="submit" name="" value="Update">
        </form>
      </div>
    </div>

  </body>
</html>
